@model LoginModel
@{Layout = "LayoutLogin"; }

<div class="panel-body ControlBg"><h4>Войти в систему</h4></div>
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" method="post" class="form-horizontal">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label asp-for="EMail" class="control-label col-sm-2"></label>
        <div class="col-sm-2">
            <input asp-for="EMail" class="form-control" id="InputEmail" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label col-sm-2"></label>
        <div class="col-sm-2">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <button class="btn ControlBg focus" type="submit">Вход</button>
        </div>
    </div>
</form>
<script>
    $(function () {
        if ($("#InputEmail").val) {
            $(".focus").focus();
        } else {
            $("#InputEmail").focus();
        }
    });
</script>