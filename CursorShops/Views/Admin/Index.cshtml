@model IEnumerable<ShopUser>
@{Layout = "LayoutLogin"; }
<div class="bg-primary panel-body"><h4>Пользователи</h4></div>
<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Наименование</th><th>Подразделение</th><th>Логин</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Нет пользователей</td></tr>
    }
    else
    {
        foreach (ShopUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Department</td>
                <td>@user.Email</td>            
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редактировать</a>
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-default" asp-action="Create">Создать пользователя</a>
<a class="btn btn-default" asp-controller="Role" asp-action="Index">Роли</a>
<a class="btn btn-default" asp-controller="Main" asp-action="Index">Назад</a>