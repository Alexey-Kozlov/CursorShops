@model IEnumerable<CommentModel>

<script asp-src-include="lib/jqwidgets/jqwidgets/jqxcore.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxbuttons.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxscrollbar.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxcheckbox.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxlistbox.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxdropdownlist.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxdropdownbutton.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxcolorpicker.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxwindow.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxeditor.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxtooltip.js"></script>
<script asp-src-include="lib/CursorShopsScripts/ShowCommentEdit.js"></script>
<script asp-src-include="lib/CursorShopsScripts/ReplaceImages.js"></script>
<script asp-src-include="lib/jqwidgets/jqwidgets/jqxvalidator.js"></script>
<div style="text-align:center;width:100%;font-size:16px;font-weight:600">Раздел комментариев</div>
<textarea id="Message" name="Message" rows="5"></textarea>
<table id="CommentArea" class="table table-condensed table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th style="width:100px">Дата</th>
        <th style="width:100px">Автор</th>
        <th>Сообщение</th>
    </tr>
</thead>
<tbody>
        @foreach (CursorShops.Models.CommentModel md in Model)
        {
            <tr>
                <td>
                    <div>@md.CommentDate.ToString("dd.MM.yyyy HH:mm")</div>
                </td>
                <td>
                    <div>@md.Author</div>
                </td>
                <td>
                    <div>@Html.Raw(@md.Text)</div>
                </td>
            </tr>
        }
</tbody>
</table>
